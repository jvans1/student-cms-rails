      <div class="clear"></div>
    </div>
  </header>

  <section id="about" class="about-us content" style="margin-top: 34px">


        <div class="jrcolumns">
          <!-- LEFT COLUMN -->
          <div id='navcontainer'class="one_third">


  

<div class="profile-photo">
  <img src="<%= @student.photo %>"/>
</div>


   


            <nav id='side-nav'>
              <ul>
                    <% @student.socials.each do |social| %>
                    <li class="<%= social.name %>">
                      <a href="<%= social.link %>"><%= social.name.capitalize %></a>
                    </li>
                  <% end %>
              </ul>
            </nav> <!-- this is the end of side nav -->
          </div>
          <!-- MIDDLE COLUMN -->
          <div class="two_third">
            <h1><%= @student.name %></h1>
            <h2 id='tagline'><%= @student.tagline %></h2>
            <p><%= @student.bio %></p>

<br/><br/>
            <h2 id='tagline'>My favorite apps</h2>

              <% @student.apps.each_with_index do |app, index| %>
                <% if (index + 1) % 3 == 0 %>
                  <div class="one_third last">
                <% else %>
                  <div class="one_third">
                <% end %>
                  <h4><%= app.name %></h4>
                  <p><%= app.description %></p>
                </div>
              <% end %>


          </div>
          <!-- RIGHT COLUMN -->

        <div class="clear"></div>

        <h2 class="title"><span>Coder Cred</span></h2>



          <div class="columns" style="padding-left: 22px;">
          <div class="coder-cred">
              <% @social_links = ["github", "codeschool", "coderwall", "stackoverflow", "treehouse"] %>
              <% @social_links.each_with_index do |item, index| %>
                <% if (index + 1) % 5 == 0 %>
                  <div class="one_fifth last">
                <% else %>
                  <div class="one_fifth">
                <% end %>
                  <a href="<%= @socials.find_by_name("#{item}").link %>">
                    <div class="cred-<%= @socials.find_by_name("#{item}").name %>"></div>
                  </a>
                </div>
              <% end %> 
          </div>
          </div>


        <div class="clear"></div>
        <h2 class="title"><span>Social Nerdery</span></h2>


        <div class="one_half">

          <h2> Github Feed</h2>

          <% username = @student.socials.find_by_name('github').link.split('github.com/')[1] %>
            <script language="JavaScript" src="http://itde.vccs.edu/rss2js/feed2js.php?src=https%3A%2F%2Fgithub.com%2F<%= username %>.atom&chan=n&num=5&desc=1&date=n&targ=y" type="text/javascript"></script>

            <noscript>
            <a href="http://itde.vccs.edu/rss2js/feed2js.php?src=https%3A%2F%2Fgithub.com%2Fcreekace.atom&chan=n&num=5&desc=1&date=n&targ=y&html=y">View RSS feed</a>
            </noscript>


        </div>

        <div class="one_half last">
          <% if @student.socials.find_by_name("social_twitter") %>
            <a class="twitter-timeline" href="<%= @student.send("social_twitter").link %>" data-widget-id="<%= @student.twitter_widget_id.to_s %>">Tweets by @<%= @student.send("social_twitter").link.match(".com\/(.+)")[1] %></a>
            <% if @student.twitter_widget_id.nil? %>
              <h3>This lazy bum didn't create a twitter wideget!</h3>
            <% else %>
              <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="http://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
            <% end %>
          <% else %>
            <h3>This crazy guy doesn't use twitter!</h3>
          <% end %>


        </div>
        <div class="clear"></div>
        <h2 class="title">&nbsp;</h2>
      </div>
    </div>
  </section>
